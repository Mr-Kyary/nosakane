<% if admin_signed_in? %>
  <h1>会社一覧</h1>
  <table class="table">
    <thead>
      <tr>
        <th>会社<ID</I></th>
        <th>会社名</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @companies.each do |company| %>
        <tr>
          <td><%= company.company_id %></td>
          <td><%= company.company_name %></td>
          <td><%= link_to '詳細', company, class: "btn btn-primary btn-sm" %></td>
          <td><%= link_to '編集', edit_company_path(company), class: "btn btn-primary btn-sm" %></td>
          <td><%= link_to '削除', company, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary btn-sm" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <% to_top %>
<% end %>
<%= link_to 'New Company', new_company_path %>