<%= form_with(model: report) do |form| %>
  <% if report.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(report.errors.count, "error") %> prohibited this report from being saved:</h2>

      <ul>
        <% report.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :reports_id %>
    <%= form.number_field :reports_id %>
  </div>

  <div class="field">
    <%= form.label :student_id %>
    <%= form.collection_select :student_id,Student.all,:id,:name %>
  </div>

  <div class="field">
    <%= form.label :report_type_id %>
    <%= form.select :report_type_id,[["会社訪問","1"],["面接","2"],["筆記試験","3"]] %>
  </div>

  <div class="field">
    <%= form.label :planned_date %>
    <%= form.date_select :planned_date %>
  </div>

  <div class="field">
    <%= form.label :company_id %>
    <%= form.text_field :company_id %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
