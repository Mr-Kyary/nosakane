<div id="signup" class="faq section-bg">
  <div class="col-lg-7 mt-5 mt-lg-0 d-flex align-items-stretch" data-aos="fade-up" data-aos-delay="200">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "php-email-form") do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>
  <div class="orm-group col-md-6">
    <%= f.label :student_id, "学生番号" %><br />
    <%= f.text_field :student_id, autofocus: true %>
  </div>

  <div class="form-group col-md-6">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="form-group col-md-6">
    <%= f.label :password, "パスワード" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="form-group col-md-6">
    <%= f.label :password_confirmation, "パスワード（確認用）" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
  <div class="text-center">
    <div class="actions sign-up-btn">
      <%= f.submit "アカウント作成", class: "submit-btn" %>
    </div>
  </div>
  <%= hidden_field_tag :line_account_id, params[:line_account_id] %>
  <% end %>

<%= render "users/shared/links" %>
</div>